{
  "name": "hddssite",
  "version": "1.2.0",
  "description": "Talones web site",
  "main": "dist/main.js",
  "scripts": {
    "start": "webpack serve --config webpack.config.js --mode development --port 3000 --open",
    "debug": "webpack serve --config webpack.config.js --mode development --port 3000",
    "build": "npm version minor && webpack --mode production",
    "build:dev": "prettier --write src/**/*.{ts,tsx,css,html} && webpack --mode development",
    "prettier": "prettier --write src/**/*.{ts,tsx,css,html}",
    "updates": "ncu -u && npm i",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@preact/signals": "^2.2.1",
    "@preact/signals-react": "3.2.1",
    "clsx": "^2.1.1",
    "preact": "^10.26.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "esbuild-loader": "^4.3.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.6.2",
    "speed-measure-webpack-v5-plugin": "1.5.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
